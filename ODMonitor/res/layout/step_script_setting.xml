<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewHighSpeedRPM"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="High Speed(rpm)" />

        <EditText
            android:id="@+id/editTextHighSpeedRPM"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="3"
            android:hint="50~300"
            android:digits="0123456789"
            android:inputType="number" >
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewLowSpeedRPM"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Low Speed(rpm)" />

        <EditText
            android:id="@+id/editTextLowSpeedRPM"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="3"
            android:hint="50~300"
            android:digits="0123456789"
            android:inputType="number" >
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewHighSpeedOperationDuration"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="High Speed Operation Duration(sec)" />

        <EditText
            android:id="@+id/editTextHighSpeedOperationDuration"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="5"
            android:hint="10~99999"
            android:digits="0123456789"
            android:inputType="number" >
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewLowSpeedOperationDuration"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Low Speed Operation Duration(sec)" />

       <EditText
            android:id="@+id/editTextLowSpeedOperationDuration"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="5"
            android:hint="10~99999"
            android:digits="0123456789"
            android:inputType="number" >
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewTemperature"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Temperature(â„ƒ)" />

       <EditText
            android:id="@+id/editTextTemperature"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="2"
            android:hint="0~70"
            android:digits="0123456789"
            android:inputType="number" >
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewExperimentOperationDuration"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Experiment Operation Duration(min)" />

       <EditText
            android:id="@+id/editExperimentOperationDurationHour"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="2"
            android:hint="0~90"
            android:digits="0123456789"
            android:inputType="number" >
        </EditText>
        
        <TextView
            android:id="@+id/textViewExperimentOperationDurationHour"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Hour" />
        
        <EditText
            android:id="@+id/editExperimentOperationDurationMin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="2"
            android:hint="0~59"
            android:digits="0123456789"
            android:inputType="number" >
        </EditText>
        
        <TextView
            android:id="@+id/textViewExperimentOperationDurationMin"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Min" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/button_ok"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:text="OK" />
    </LinearLayout>

</LinearLayout>
